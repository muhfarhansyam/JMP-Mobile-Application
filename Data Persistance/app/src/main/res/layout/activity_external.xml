<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".ExternalActivity">


    <Button
        android:id="@+id/buttonbuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buat File" />

    <Button
        android:id="@+id/buttonubah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubah File" />

    <Button
        android:id="@+id/buttonbaca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baca File" />

    <Button
        android:id="@+id/buttonhapus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hapus File" />

    <TextView
        android:id="@+id/textbaca"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/purple_500"
        android:gravity="top|left"
        android:textColorHint="@color/white"
        android:hint="Hasil Baca File"
        android:padding="5dp"
        android:inputType="textMultiLine"/>
</LinearLayout>